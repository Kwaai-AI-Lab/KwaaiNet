# Auto detect text files and normalize line endings to LF
* text=auto

# Explicitly declare shell scripts as text and force LF
*.sh text eol=lf

# Explicitly declare batch/powershell as text and force CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Declare files that should always have LF
*.rs text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
